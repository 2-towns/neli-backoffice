{
    "files.associations": {
        "*.gohtml": "html"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true
    },
    "editor.formatOnSave": true,
    "git.ignoreLimitWarning": true,
    "go.useLanguageServer": false,
    "go.formatTool": "gofmt",
    "go.liveErrors": {
        "enabled": true,
        "delay": 500
    }
}